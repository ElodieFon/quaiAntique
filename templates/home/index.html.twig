{% extends 'base.html.twig' %}

{% block title %}le quai antique / acceuil{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/home.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}
    <main class="mt-5 ">
        {% include "base/header.html.twig" %}
            
        <div class="d-flex flex-wrap align-items-center justify-content-center">
        {% for product in products %}
            {% if product.productOfMoment == 1 and product.active == 1 %}
                <div class="card m-3 d-flex flex-row">
                    <div class="col-4 d-flex align-items-center">
                        <img src="images/products/{{product.image}}" alt="{{product.name}}" style="width: 100%;"/>
                    </div>

                    <div class="card-body d-flex flex-wrap justify-content-between ">
                        <h3 class="text-center text-capitalize col-12">{{product.name}}</h3>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary ">voir</a>
                        <p class="d-flex flex-row-reverse price">{{product.prix / 100}} â‚¬</p>
                    </div>          
                </div>
            {% endif %}
        {% endfor %}
        </div>
               
    </main>
{% endblock %}
