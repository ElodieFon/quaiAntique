{% extends 'base.html.twig' %}

{% block title %}le quai antique / acceuil{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/home.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}
    <main class="mt-5 ">
          {% include "base/header.html.twig" %}
            
                        <div class="d-flex flex-wrap align-items-center justify-c">
                        {% for product in products %}
                            {% if product.productOfMoment == 1 and product.active == 1 %}
                            <div class="card m-3 d-flex col-5 flex-row">
                                <div class="col-4 d-flex align-items-center">
                                    <img src="images/products/{{product.image}}" alt="{{product.name}}" style="width: 100%;"/>
                                </div>
                        
                                <div class="card-body">
                                    <h3 class="text-center text-capitalize">{{product.name}}</h3>
                                    <p class="d-flex flex-row-reverse">{{product.prix / 100}}â‚¬</p>
                                    {# TODO : faire une redirection singlepage ex : href:/(nom de le page)/product.id #}
                                    <button class="btn btn-primary">voir</button>
                                </div>          
                            </div>
                            {% endif %}
                        {% endfor %}
                        </div>
               
                
    </main>
{% endblock %}
