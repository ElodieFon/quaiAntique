{% extends 'base.html.twig' %}

{% block title %}le quai antique / carte -> {{product.name}} {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/carte.css') }}" type="text/css" rel="stylesheet">
{% endblock %}


{% block body %}
    <main>
        
        {% include "base/header.html.twig" %} 
        <a href="{{ path('app_carte') }}" class="btn btn-warning m-3">Retourner à la carte</a>
        <div class="d-flex p-0 m-4 bg-light flex-wrap  container-single">
            <div class=" m-auto block-img">
                <img src="/images/products/{{product.image}}" alt="{{product.name}}" style="width: 100%; max-width : 800px"/>
            </div>
            <div class="d-flex align-items-center justify-content-center flex-column bg-light m-auto">
                <h2 class="p-2 text-capitalize">{{product.name}}</h2>
                <p class="p-4"> 
                    {{product.description}}
                </p>
                <span class="text-danger fs-2">{{product.prix / 100}} €</span>
            </div>
            
        </div>
           
    </main>

{% endblock %}
