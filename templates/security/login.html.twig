{% extends 'base.html.twig' %}

{% block title %}le quai antique / connection{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/login.css') }}" type="text/css" rel="stylesheet">
{% endblock %}
{% block body %}
<main>
    {% include "base/header.html.twig" %}
    <form method="post" class="mt-5 col-6 m-auto">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        {% if app.user %}
            <div class="mb-3">
                vous etes déjà connecté , <a href="{{ path('app_logout') }}">Se deconnecter</a> ?
            </div>
        {% endif %}
    
        <h2 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h2>
        <div class="mb-3"> 
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
       
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
       
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
    <div class="mt-3">
        <p class="fs-4 text-center">Pas encore inscrit ? c'est par <a href="/register">ici</a></p>
    </div>
</main>

{% endblock %}
