{% extends 'base.html.twig' %}

{% block title %}le quai antique / carte{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/carte.css') }}" type="text/css" rel="stylesheet">
{% endblock %}
{% block body %}
    <main>
    {% include "base/header.html.twig" %} 
    
        <div class="conteneur-tabs ">
        {% for category in categories %}
            {% if category.active == 1 %}
            <input name="tabs" type="radio" id="{{category.nom}}">
            <label for="{{category.nom}}" class="label">{{category.nom}}</label>
            <div class="panel m-auto">
                <div class="d-flex flex-wrap align-items-center justify-c">
                {% for product in products %}
                {% if category.nom == product.category and product.active == 1 %}
                    <div class="card m-3 d-flex col-5 flex-row">
                        <div class="col-4 d-flex align-items-center">
                            <img src="images/products/{{product.image}}" alt="{{product.name}}" style="width: 100%;"/>
                        </div>
                
                        <div class="card-body d-flex flex-wrap justify-content-between">
                            <h3 class="text-center text-capitalize col-12">{{product.name}}</h3>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">voir</a>
                            <p class="d-flex flex-row-reverse price">{{product.prix / 100}} â‚¬</p>
                        </div>          
                    </div>
                {% endif %}          
                {% endfor %}
                </div>
            </div>
            {% endif %}
        {% endfor %}
        </div>
         
             
    </main>
{% endblock %}
